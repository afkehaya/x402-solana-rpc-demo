{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*.ts",
    "services/**/*.ts",
    "clients/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}